#! /usr/bin/bash
set -e # exit if there's an error

# Make our prints a lot nicer 
CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="Setting up database..."  
printf "${CYAN}=== ${LABEL}${NO_COLOR}\n"

bin_path="$(realpath .)/backend-flask/bin/db"

source "$bin_path/drop"
source "$bin_path/create"
source "$bin_path/schema-load"
source "$bin_path/seed"

# source "$bin_path/update_cognito_user_ids"
# "update_cognito_user_ids" is a python script
python "$bin_path/update_cognito_user_ids"